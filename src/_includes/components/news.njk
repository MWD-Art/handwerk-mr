<div class="news-grid">
  {% for post in posts | limit(5) %}
  <div class="news">
    <div class="news_img">
      <img src="{{ post.image }}" alt="{{ post.title }}">
    </div>
    <div class="news-content flow">
      <h3><a href="{{ post.url }}">{{ post.title }}</a></h3>
      <p>{{ post.text }}</p>
    </div>
  </div>
  {% endfor %}
</div>